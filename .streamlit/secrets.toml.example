# =============================================================================
# ARCHIVO DE EJEMPLO DE SECRETOS - NO CONTIENE CREDENCIALES REALES
# =============================================================================
# 
# INSTRUCCIONES PARA CONFIGURAR TU ENTORNO:
# 
# 1. Copia este archivo y renómbralo a "secrets.toml" (sin .example)
#    $ cp .streamlit/secrets.toml.example .streamlit/secrets.toml
#
# 2. Obtén tus credenciales de Google Cloud Platform:
#    - Ve a: https://console.cloud.google.com/
#    - Navega a: IAM & Admin > Service Accounts
#    - Crea una cuenta de servicio nueva (si no tienes una)
#    - Genera una clave JSON
#    - Descarga el archivo JSON con las credenciales
#
# 3. Copia los valores del JSON descargado a las claves de abajo
#
# 4. Habilita la API de Google Sheets:
#    - Ve a: https://console.cloud.google.com/apis/library
#    - Busca "Google Sheets API" y habilítala
#    - Busca "Google Drive API" y habilítala
#
# 5. Comparte tu Google Sheet con el email de la cuenta de servicio:
#    - Abre tu Google Sheet
#    - Click en "Compartir"
#    - Agrega el email "client_email" de abajo con permisos de Editor
#
# NUNCA SUBAS ESTE ARCHIVO A GIT CON CREDENCIALES REALES
# El archivo .gitignore ya incluye secrets.toml para protegerte
# =============================================================================

[gcp_service_account]
# Tipo de cuenta (siempre "service_account" para cuentas de servicio)
type = "service_account"

# ID del proyecto de Google Cloud Platform
# Ejemplo: "mi-proyecto-123456"
project_id = "TU_PROJECT_ID_AQUI"

# ID de la clave privada (hash único)
# Ejemplo: "a1b2c3d4e5f6..."
private_key_id = "TU_PRIVATE_KEY_ID_AQUI"

# Clave privada RSA (MANTENER EL FORMATO CON \n para saltos de línea)
# IMPORTANTE: Debe empezar con -----BEGIN PRIVATE KEY----- y terminar con -----END PRIVATE KEY-----
# IMPORTANTE: Los saltos de línea dentro del string se representan como \n
private_key = "-----BEGIN PRIVATE KEY-----\nTU_CLAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# Email de la cuenta de servicio
# Ejemplo: "mi-bot@mi-proyecto.iam.gserviceaccount.com"
client_email = "TU_SERVICE_ACCOUNT_EMAIL_AQUI"

# ID numérico del cliente
# Ejemplo: "123456789012345678901"
client_id = "TU_CLIENT_ID_AQUI"

# URI de autenticación (generalmente no cambia)
auth_uri = "https://accounts.google.com/o/oauth2/auth"

# URI del token (generalmente no cambia)
token_uri = "https://oauth2.googleapis.com/token"

# URL del certificado del proveedor de autenticación (generalmente no cambia)
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"

# URL del certificado X.509 del cliente
# Se genera automáticamente basado en tu client_email
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/TU_SERVICE_ACCOUNT_EMAIL_URL_ENCODED"

# Dominio del universo (generalmente "googleapis.com")
universe_domain = "googleapis.com"


# =============================================================================
# CONFIGURACIONES ADICIONALES (OPCIONAL)
# =============================================================================
# Puedes agregar más secretos aquí si tu aplicación los necesita:
#
# [database]
# host = "localhost"
# port = 5432
# user = "admin"
# password = "tu_password_seguro"
#
# [api_keys]
# openai = "sk-..."
# stripe = "sk_test_..."
# =============================================================================
